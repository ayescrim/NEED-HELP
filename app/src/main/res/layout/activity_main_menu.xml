<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#f22d2d"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bg3"
        android:id="@+id/imageView12"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/btnAllRecipes" />

    <Button
        android:text="ALL RECIPES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAllRecipes"
        android:layout_marginTop="86dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="CATEGORIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCategories"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonshape2"
        android:layout_below="@+id/btnAllRecipes"
        android:layout_alignStart="@+id/btnAllRecipes" />

    <Button
        android:text="MY PROFILE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMyProfile"
        android:layout_marginTop="60dp"
        android:background="@drawable/buttonshape3"
        android:layout_below="@+id/btnCategories"
        android:layout_alignStart="@+id/btnCategories" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bg3"
        android:id="@+id/imageView8"
        android:layout_marginBottom="214dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar" />


</RelativeLayout>
